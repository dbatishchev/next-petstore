generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model Pet {
  id       Int    @id @default(autoincrement())
  name     String
  breed    String
  age      String
  price    Float
  imageUrl String
  order    Order?
}

model Order {
  id        Int      @id @default(autoincrement())
  petId     Int      @unique
  userId    String
  createdAt DateTime @default(now())
  status    String   @default("pending")
  pet       Pet      @relation(fields: [petId], references: [id])
}
